<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/tweet_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tweet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tweet_profile_image"
        android:layout_toRightOf="@id/tweet_profile_image"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:textColor="@color/tweeterName"/>

    <TextView
        android:id="@+id/tweet_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/tweet_name"
        android:textSize="12sp"
        android:textColor="@color/tweeterUsername"/>

    <TextView
        android:id="@+id/tweet_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_name"
        android:textSize="14sp"
        android:layout_toRightOf="@id/tweet_profile_image"
        android:autoLink="all"
        android:linksClickable="true" />

    <ImageView
        android:id="@+id/tweet_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@id/tweet_body"
        android:layout_alignLeft="@id/tweet_profile_image"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tweet_tweeted_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:textColor="@color/tweeterUsername"
        android:layout_alignTop="@id/tweet_profile_image" />
</RelativeLayout>